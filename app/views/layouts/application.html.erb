<!DOCTYPE html>
<html>
<head>
  <title>DRU DONOVAN - <%= content_for?(:title) ? yield(:title) : 'photographer' %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery-ui' %>
  <%= include_tiny_mce_if_needed %>
  <%= yield :script %>
  <%= csrf_meta_tag %>
  
  <!--[if lt IE9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>

<content class="group <%= controller.controller_name %>-<%= controller.action_name %>">

	<header class="group">
		<h1><%= link_to 'DRU DONOVAN', root_path %></h1>
		
		<ul id="nav">
			<li id="news-link"><a href="/posts">news</a></li>
			<li id="bio-link"><a href="/bio">bio</a></li>
			<li id="contact-link"><a href="/contact">contact</a></li>
		</ul>
		
		<% if controller.controller_name == 'portfolios' && controller.action_name == 'show' %>
		<ul id="portfolio-nav">
			<li id="previous-link" class="inactive">previous</li>
			<li id="next-link"><a href="#">next</a></li>
		</ul>
		<% end %>
		
	</header>
	
	<p id="notice"><%= notice %></p>
	
	<main>
	
	<% if controller.controller_name == 'portfolios' && controller.action_name == 'show' && Settings.show_portfolios == 'true'%>
		<%= render :partial => 'portfolios/portfolio_nav' %>
	<% end %>

	<%= yield %>
	</main>

</content>

</body>
</html>
