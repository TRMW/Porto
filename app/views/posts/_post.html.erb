<article class="post group">
  <%= image_tag post.image.url, :alt => post.title, :width => "348px" %>
  <div class="post-body">
    <header>
      <h1><%= post.title %></h1>
      <time datetime="<%= post.created_at.to_date %>" pubdate><%= link_to post.created_at.strftime('%b %d, %Y'), page_path(Settings.blog_title.parameterize, post) %></time>
    </header>
    
    <%= raw post.body %>
  </div>
</article>