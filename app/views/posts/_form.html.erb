<%= form_for(@post, :html => { :multipart => true }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :placeholder => "Post Title" %>
  </div>
  <div class="field">
    <%= f.text_area :body, :class => "mceEditor" %>
  </div>
  <% if f.object.image? %>
	  <div class="field">
	  	<%= image_tag f.object.image(:thumb) %>
	  </div>
  <% end %>
  <div class="field">
  	<%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
