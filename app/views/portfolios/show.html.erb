<% content_for :script do %>
	<%= javascript_include_tag 'portfolio' %>
<% end %>

<p id="notice"><%= notice %></p>

<ul id="portfolios">
<% for portfolio in @portfolios %>
	<li><%= link_to_unless_current portfolio.title.downcase, portfolio, :class => 'portfolio-link' %></li>
<% end %>
</ul>
		
<% @portfolio.photos.each_with_index do |photo, index| %>

	<% if photo == @portfolio.photos.last %>
		<%= image_tag photo.image.url, :class => "portfolio-photo-last", :id => "photo_#{index}" %>
	<% else %>
  	<%= image_tag photo.image.url, :class => "portfolio-photo", :id => "photo_#{index}" %>
  <% end %>

<% end %>
