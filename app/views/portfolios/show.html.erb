<% content_for :script do %>
	<%= javascript_include_tag 'portfolio' %>
<% end %>

<% content_for :title do @portfolio.title.downcase end %>
		
<% @portfolio.photos.each_with_index do |photo, index| %>

	<% if photo == @portfolio.photos.last %>
		<%= image_tag photo.image.url, :class => "portfolio-photo portfolio-photo-last", :id => "photo_#{index}" %>
	<% else %>
  	<%= image_tag photo.image.url, :class => "portfolio-photo", :id => "photo_#{index}" %>
  <% end %>

<% end %>
