<% content_for :title do "admin" end %>

<h2>Portfolios</h2>

<div class="blocks group">
  <%= form_tag(set_position_path, :remote => true, :id => 'portfolio_position') do %>
    <% @portfolios.each do |portfolio| %>
      <div class="field block sortable">
        <div class="title"><%= link_to portfolio.title, edit_admin_portfolio_path(portfolio) %></div>
        <div class="image-wrapper">
          <%= link_to image_tag(portfolio.photos.first.image.url(:thumb)), edit_admin_portfolio_path(portfolio) %>
        </div>
        <div class="actions">
          <%= link_to 'View', portfolio, :class => 'left' %>
          <%= link_to 'Delete', admin_portfolio_path(portfolio), :confirm => 'Are you sure?', :method => :delete, :class => 'right' %>
        </div>
        <%= hidden_field_tag "portfolios[#{portfolio.id}]", portfolio.position, :id => "position_#{portfolio.id}" %>
      </div>
    <% end %><!-- end portfolio blocks -->
  <% end %><!-- end portfolio position form -->
  
  <div class="field block">
    <div class="image-placeholder"><%= link_to 'add portfolio', new_admin_portfolio_path %></div>
  <div class="actions"></div>
  </div><!-- end new portfolio block -->
</div>

<h2>News</h2>

<div class="group">

  <% for post in @posts do %>
  <div class="field block">
    <div class="title"><%= link_to post.title, edit_admin_post_path(post) %></div>
    <div class="image-wrapper">
      <%= link_to image_tag(post.image.url(:thumb)), edit_admin_post_path(post) %>
    </div>
  <div class="actions">
    <%= link_to 'View', page_path(Settings.news_title, post), :class => 'left' %>
    <%= link_to 'Delete', post_path(post), :confirm => 'Are you sure?', :method => :delete, :class => 'right' %>
  </div>
  </div><!-- end post blocks -->
  <% end %>
  
  <div class="field block">
    <div class="image-placeholder"><%= link_to 'add news', new_admin_post_path %></div>
  <div class="actions"></div>
  </div><!-- end new post block -->
  
</div>
  
<%= render 'settings' %>